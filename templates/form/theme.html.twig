{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {% set row_class = row_class|default('mt-2 px-3 mb-3 ') %}
    {{ parent() }}
{% endblock form_row %}

{%- block widget_attributes -%}
    {%- set attr = attr|merge({ class: attr.class|default(widget_class|default('mt-1 w-full rounded-md shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full sm:text-sm border-gray-300')) ~ (disabled ? ' ' ~ widget_disabled_class|default('bg-sky-300 border-gray-300 text-gray-500')) ~ (errors|length ? ' ' ~ widget_errors_class|default('border-red-700')) }) -%}
    {{- parent() -}}
{%- endblock widget_attributes -%}

{% block form_label %}
    {% set label_class = label_class|default('font-semibold text-gray-600 ') %}
    {{ parent() }}
{% endblock form_label %}