<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Materiel-S{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body class="bg-gray-200 " {{ stimulus_controller('symfony/ux-swup/swup') }}>
    <div class="flex">

        <aside  class="bg-gray-900 shadow-2xl pt-[20px] pb-[37px] pl-[20px] pr-[15px] sidebar sticky top-0 h-full flex flex-col justify-between min-h-screen ">
            <div>
                {{ include('sidebars.html.twig',{
                    containers: ['#swup', '#nav'],
                    animateHistoryBrowsing: true,
                    animationSelector: '[class*="transition-"]',
                    cache: true,
                    linkSelector: '...',
                    theme: 'slide',
                    debug: true,
                }) }}
            </div>

        </aside>
        <div class="relative w-full">
            <header class="bg-white">
                <div class="container">

                </div>
            </header>
            <main id="swup" class="pt-2 pb-2 mb-4 bg-opacity-75">
                <div class="w-full  px-4">
                    {% block body %}{% endblock %}
                </div>
            </main>

        </div>
    </div>




    </body>
</html>
